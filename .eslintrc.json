{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "standard", 
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [ "error", "always"],
        "prefer-const": "error"
    },
    "ignorePatterns": "*.d.ts"
}
